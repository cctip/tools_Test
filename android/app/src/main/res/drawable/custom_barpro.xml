    <!--            </shape>-->
    <!--        </clip>-->
    <!--    </item>-->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8dp" />
                <gradient
                    android:startColor="#FFA630"
                    android:centerColor="#FFA630"
                    android:centerY="0.5"
                    android:endColor="#FFA630"
                    android:angle="270"/>  <!-- 调整渐变角度为 0 -->
                <stroke
                    android:width="2dp"
                    android:color="#5C3022"/>
            </shape>
        </clip>
    </item>
</layer-list>