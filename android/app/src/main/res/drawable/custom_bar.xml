    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8dp" />
                <gradient
                    android:startColor="#FFFFEB3B"
                android:centerColor="#FF9800"
                android:centerY="0.5"
                android:endColor="#FF9800"
                android:angle="270"/>  <!-- 调整渐变角度为 0 -->
                <stroke
                    android:width="2dp"
                    android:color="#FF000000"/>
            </shape>
        </clip>
    </item>
</layer-list>