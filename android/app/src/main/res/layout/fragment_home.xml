<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/homebg"
    tools:context=".ui.fragment.HomeFragment">

    <ImageView
        android:id="@+id/memor"
        android:layout_width="400dp"
        android:layout_height="190dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/memorytrack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/whichcard"
        android:layout_width="400dp"
        android:layout_height="190dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/whichcard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memor" />

    <ImageView
        android:id="@+id/whichcar"
        android:layout_width="400dp"
        android:layout_height="190dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/whichcar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whichcard" />

</androidx.constraintlayout.widget.ConstraintLayout>