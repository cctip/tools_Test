<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_memorimgbg"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:src="@mipmap/memoritembg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_memorimg"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/memorblue"
        app:layout_constraintBottom_toBottomOf="@+id/item_memorimgbg"
        app:layout_constraintEnd_toEndOf="@+id/item_memorimgbg"
        app:layout_constraintStart_toStartOf="@+id/item_memorimgbg"
        app:layout_constraintTop_toTopOf="@+id/item_memorimgbg" />

</androidx.constraintlayout.widget.ConstraintLayout>